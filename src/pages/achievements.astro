---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CommonBanner from "../components/CommonBanner.astro";
import AchievementsGrid from "../components/Achievements.astro";
import CommonMetaTags from "../components/CommonMetaTags.astro";

const achievementsData = [
  {
    imgSrc: "/img/catechism-award.webp",
    altText: "Catechism Award",
    desc: "Our Catechism Department won A+ Grade for Best Catechetical Unit of Kalyan Diocese in Isaac Group.",
  },
];

const pageUrl = "https://stjosephchurchairoli.in/achievements/";
const pageTitle = "Achievements - St. Joseph's Church, Airoli";

---

<!doctype html>
<html lang="en" class="no-js">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta charset="UTF-8" />

    <CommonMetaTags />
    <!-- Facebook Meta Tags -->
    <meta property="og:url" content={pageUrl} />
    <meta property="og:title" content={pageTitle} />

    <!-- Twitter Meta Tags -->
    <meta property="twitter:url" content={pageUrl} />
    <meta name="twitter:title" content={pageTitle} />

    <title>{pageTitle}</title>
  </head>

  <body>
    <Header />
    <CommonBanner title="Achievements" />
    <AchievementsGrid items={achievementsData} />
    <Footer />
  </body>
</html>
